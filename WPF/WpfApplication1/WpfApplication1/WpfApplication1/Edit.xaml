<Window x:Class="WpfApplication1.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Edit" Height="214.944" Width="426.85">
    <Grid Margin="0,0,26,15">
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=login, Mode=TwoWay}" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="fioBox" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="{Binding Path=fio, Mode=TwoWay}" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="descriptionBox" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" TextWrapping="Wrap" Text="{Binding Path=description, Mode=TwoWay}" VerticalAlignment="Top" Width="223"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="238,10,0,0" VerticalAlignment="Top" Width="80" Click="button_Click" Height="79"/>

    </Grid>
</Window>
