<Window x:Class="WpfApplication1.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Edit" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="nameBox" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="{Binding Path=login, Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBox x:Name="fioBox" Height="23" Margin="10,38,10,0" TextWrapping="Wrap" Text="{Binding Path=fio, Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBox x:Name="descriptionBox" Height="23" Margin="10,66,10,0" TextWrapping="Wrap" Text="{Binding Path=description, Mode=TwoWay}" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="51"/>

    </Grid>
</Window>
